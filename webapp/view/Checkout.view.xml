									path : 'cartProducts>/cartEntries',
									sorter : {
										path : 'Name',
										descending : false
									}
							 	}">
								<items>
									<ObjectListItem id="_IDGenObjectListItem2"
										intro="{cartProducts>Quantity} x"
										icon="{imageModel>/path}{cartProducts>image}"
										title="{cartProducts>product_name}"
										number="{
